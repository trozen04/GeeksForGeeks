class Solution {
    public int findPair(int n, int x, int[] arr) {
        Arrays.sort(arr);
        int right = 0;
        int left = 0;
        while(left < n && right < n){
            int diff = arr[right] - arr[left];
            if(diff == x && left != right){
                return 1;
            } else if(diff < x){
                right++;
            } else{
                left++;
            }
        }
        return -1;
    }
}
